<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="411dp"
        android:layout_height="64dp"
        android:background="@color/colorAccent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/soportemorelia" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:padding="2dp"
        android:text="Motivo del Ticket"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtMotivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:ems="10"
        android:fontFamily="@font/roboto_condensed_bold"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Descripción del Ticket"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtDescripcionTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:autoText="true"
        android:ems="10"
        android:fontFamily="@font/roboto_condensed_bold"
        android:inputType="textMultiLine|textPersonName"
        android:lines="1"
        android:maxLines="5"
        android:singleLine="false" />

    <RadioGroup
        android:id="@+id/groupButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="Prioridad Normal"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="Prioridad Urgente"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="18sp" />
    </RadioGroup>


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Dirección del soporte"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtDireccionSoporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:ems="10"
        android:fontFamily="@font/roboto_condensed_bold"
        android:inputType="textPersonName"
        android:singleLine="true" />

    <Button
        android:id="@+id/btnImagenLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Seleccionar Imagen"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />


</LinearLayout>